<div class='row'>
  <div class='col-md-12'>
    <div class="page-header">
      <h3 class='text-center'>
        <%= t(:sign_up) %>
      </h3>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= render partial: 'shared/form_errors', locals: { object: resource } %>
  </div>
</div>

<div class='row'>
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :name, t(:name), class: 'control-label' %><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone, t(:phone) %><br />
        <%= f.text_field :phone, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, t(:email) %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(:password) %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(:password_confirmation) %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t(:sign_up), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
