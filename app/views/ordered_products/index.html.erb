<div class='row'>
  <div class='col-md-12'>
    <div class="page-header">
      <h3 class='text-center'>
        <%= t(:ordered_products) %>
      </h3>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="text-center">
            <%= t(:image) %>
          </th>
          <th class="text-center">
            <%= t(:name) %>
          </th>
          <th class="text-center">
            <%= t(:description) %>
          </th>
          <th class="text-center">
            <%= t(:price) %>
          </th>
          <th class="text-center">
            <%= t(:count) %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @ordered_products.each do |op| %>
          <tr>
            <td>
              <%= image_tag op.product.photo.url, class: "img-rounded MyImageSize" %>
            </td>
            <td>
              <%= "#{op.product.name}" %>
            </td>
            <td class="long_words_breaker">
              <%= op.product.description %>
            </td>
            <td class="text-center">
              <%= op.product.price %>
            </td>
            <td class="text-center">
              <%= op.count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
