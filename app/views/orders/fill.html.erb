<div class='row'>
  <div class='col-md-12'>
    <div class="page-header">
      <h3 class='text-center'>
        <%= t(:leave_information_request) %>
      </h3>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-md-12 text-center">
    <%= render partial: 'shared/form_errors', locals: { object: @order } %>
  </div>
</div>

<div class='row'>
  <div class="col-md-12">
    <%= form_for @order, url: processing_orders_path do |f| %>

      <div class='form-group'>
        <%= f.label :customer_name, t(:user_name) %>
        <%= f.text_field :customer_name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :phone, t(:phone) %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :email, t(:email) %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :description, t(:description) %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <%= f.submit t(:send), class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
